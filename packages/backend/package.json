{
  "name": "@monster-game/backend",
  "version": "0.1.0",
  "description": "モンスター収集ゲーム - バックエンドAPI",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev --env development",
    "build": "wrangler build --env development",
    "deploy": "wrangler deploy",
    "dev:prod": "wrangler dev --env production",
    "dev:local": "wrangler dev",
    "test": "vitest run",
    "test:unit": "vitest run src/__tests__/api/ src/__tests__/db/",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist",
    "db:generate": "drizzle-kit generate:sqlite",
    "db:push": "drizzle-kit push:sqlite",
    "db:studio": "drizzle-kit studio",
    "seed": "tsx src/db/seedスクリプト.ts",
    "seed:reset": "tsx src/db/seedスクリプト.ts --reset"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.2.0",
    "drizzle-orm": "^0.29.0",
    "hono": "^3.12.0",
    "jose": "^6.0.11",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.0.0",
    "@types/better-sqlite3": "^7.6.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "better-sqlite3": "^9.0.0",
    "drizzle-kit": "^0.20.0",
    "eslint": "^8.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.6.1",
    "wrangler": "^4.24.0"
  }
}